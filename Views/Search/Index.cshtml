@{
    ViewData["Title"] = "Kết quả tìm kiếm - " + Model.Query;
    Layout = "_Layout";
    
    // Logic to determine active tab:
    // If we have People results, show People tab first.
    // If not, but we have Post results, show Posts tab first.
    // Otherwise (both 0), show People tab (default empty state).
    bool showPeople = Model.People.Count > 0 || Model.Posts.Count == 0;
}

<div class="search-container">
    <div class="search-header-card">
        <h4 class="search-title">Kết quả tìm kiếm cho "<span class="highlight-text">@Model.Query</span>"</h4>

        @if (!Model.HasResults)
        {
            <div class="empty-search-state">
                <i class="fas fa-search empty-search-icon"></i>
                <p>Không tìm thấy kết quả nào phù hợp.</p>
            </div>
        }
        else
        {
            <!-- Custom Tabs -->
            <div class="search-tabs" role="tablist">
                <button class="search-tab-btn @(showPeople ? "active" : "")" id="people-tab" data-bs-toggle="tab" data-bs-target="#people" type="button" role="tab" aria-selected="@(showPeople.ToString().ToLower())">
                    Mọi người <span class="tab-badge">@Model.People.Count</span>
                </button>
                <button class="search-tab-btn @(!showPeople ? "active" : "")" id="posts-tab" data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab" aria-selected="@((!showPeople).ToString().ToLower())">
                    Bài viết <span class="tab-badge">@Model.Posts.Count</span>
                </button>
            </div>

            <div class="tab-content">
                <!-- People Tab -->
                <div class="tab-pane fade @(showPeople ? "show active" : "")" id="people" role="tabpanel">
                    @if (Model.People.Count > 0)
                    {
                        <div class="user-results-list">
                            @foreach (var user in Model.People)
                            {
                                <div class="user-result-item">
                                    <a href="/Profile/@user.UserId">
                                        <img src="@(user.Avatar ?? "/assets/user.png")" alt="@user.Username" class="user-avatar">
                                    </a>
                                    <div class="user-info flex-grow-1">
                                        <h6>
                                            <a href="/Profile/@user.UserId">
                                                @((string.IsNullOrEmpty(user.FirstName) && string.IsNullOrEmpty(user.LastName)) ? user.Username : $"{user.FirstName} {user.LastName}")
                                            </a>
                                        </h6>
                                        <div class="user-handle">@@@user.Username</div>
                                        @if (!string.IsNullOrEmpty(user.Bio))
                                        {
                                            <div class="user-bio">@user.Bio</div>
                                        }
                                    </div>
                                    <a href="/Profile/@user.UserId" class="btn-view-profile">
                                        Xem trang
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-search-state">
                            <p>Không tìm thấy người dùng nào.</p>
                        </div>
                    }
                </div>

                <!-- Posts Tab -->
                <div class="tab-pane fade @(!showPeople ? "show active" : "")" id="posts" role="tabpanel">
                    @if (Model.Posts.Count > 0)
                    {
                        <div class="feed-list">
                            @foreach (var post in Model.Posts)
                            {
                                <partial name="_PostCardPartial" model="post" />
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-search-state">
                            <p>Không tìm thấy bài viết nào.</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/interactions.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/search.css" asp-append-version="true" />
}
