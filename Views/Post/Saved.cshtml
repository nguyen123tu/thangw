@{
    ViewData["Title"] = "Bài viết đã lưu";
    Layout = "_Layout";
}
@model List<MTU.Models.DTOs.PostDto>

<div class="feed-wrapper">
    <div class="mb-4">
        <h2 class="mb-3">Bài viết đã lưu</h2>
        <a href="/" class="text-decoration-none text-muted" style="display: flex; align-items: center; gap: 8px;">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var post in Model)
        {
            <partial name="_PostCardPartial" model="post" />
        }
    }
    else
    {
        <div class="card p-5 text-center shadow-sm">
            <div class="mb-3">
                <i class="fa-regular fa-bookmark fa-3x text-muted"></i>
            </div>
            <h5 class="text-muted">Bạn chưa lưu bài viết nào.</h5>
            <p class="text-muted mb-4">Lưu các bài viết yêu thích để xem lại sau.</p>
            <a href="/" class="btn btn-primary" style="width: fit-content; margin: 0 auto;">
                Khám phá ngay
            </a>
        </div>
    }
</div>
