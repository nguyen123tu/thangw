@{
    ViewData["Title"] = "Bài viết đã lưu";
    Layout = "_Layout";
}
@model List<MTU.Models.DTOs.PostDto>

<div class="feed-wrapper">
    <div class="mb-4 d-flex align-items-center justify-content-between">
        <h2 style="font-weight: 800; color: var(--text-primary); margin: 0;">
            <i class="fa-solid fa-bookmark" style="color: var(--lofi-sage); margin-right: 10px;"></i>
            Đã lưu
        </h2>
        <a href="/" class="btn-back">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var post in Model)
        {
            <partial name="_PostCardPartial" model="post" />
        }
    }
    else
    {
        <div class="empty-state-card">
            <div class="empty-icon">
                <i class="fa-regular fa-bookmark"></i>
            </div>
            <h5>Chưa có lưu bài nào cả!</h5>
            <p>Lưu những khoảnh khắc thú vị để xem lại sau nhé.</p>
            <a href="/" class="btn-explore">
                Khám phá ngay
            </a>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/saved.css" asp-append-version="true" />
}
</div>
